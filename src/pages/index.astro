---
import Newsletter from '../components/Newsletter.astro';
import Layout from '../layouts/Layout.astro';
import { createClient } from '@supabase/supabase-js';

const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_URL;
const supabaseKey = import.meta.env.PUBLIC_SUPABASE_ANON_KEY;
const supabase = createClient(supabaseUrl, supabaseKey);

let { data: posts, error } = await supabase
  .from('posts')
  .select('*')
  .order('id', { ascending: false });

if (error) console.log('Error:', error);
---

<Layout title="Pathdawann News | Lo √∫ltimo en tecnolog√≠a">
  <main class="max-w-5xl mx-auto px-4 py-12">
    
    <header class="mb-20 text-center pt-10">
      <h1 class="text-5xl md:text-7xl font-extrabold tracking-tight mb-6">
        El futuro <span class="text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-blue-600">tecnol√≥gico</span><br>
        est√° aqu√≠.
      </h1>
      <p class="text-xl text-gray-400 max-w-2xl mx-auto">
        Noticias curadas por Inteligencia Artificial para desarrolladores y entusiastas.
      </p>
    </header>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      
      {posts?.map((noticia) => (
        <article class="group relative flex flex-col h-full overflow-hidden rounded-xl">
          <div class="absolute -inset-0.5 bg-gradient-to-r from-cyan-500 to-blue-600 opacity-0 group-hover:opacity-75 transition duration-500 blur-sm"></div>
          
          <div class="relative flex flex-col flex-grow bg-[#121212] border border-white/10 group-hover:border-transparent transition-colors h-full rounded-xl overflow-hidden">
            
            <div class="w-full h-48 bg-gray-900 overflow-hidden relative">
              {noticia.image_url ? (
                <img 
                  src={noticia.image_url} 
                  alt={noticia.title} 
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                  loading="lazy"
                />
              ) : (
                // Placeholder si no hay imagen
                <div class="w-full h-full flex items-center justify-center bg-gray-800 text-gray-600">
                  <span class="text-4xl">üöÄ</span>
                </div>
              )}
            </div>

            <div class="p-6 flex flex-col flex-grow">
              <div class="flex items-center gap-2 mb-4 text-xs font-medium text-cyan-400 uppercase tracking-wider">
                <span>News</span>
                <span class="text-gray-600">‚Ä¢</span>
                <span>{new Date(noticia.created_at).toLocaleDateString()}</span>
              </div>

              <h2 class="text-xl font-bold text-white mb-3 group-hover:text-cyan-300 transition-colors leading-tight">
                {noticia.title}
              </h2>
              
              <p class="text-gray-400 text-sm line-clamp-3 mb-6 flex-grow">
                {noticia.content.substring(0, 150).replace(/[#*]/g, '')}...
              </p>

              <a href={`/post/${noticia.slug}`} class="mt-auto inline-flex items-center text-sm font-semibold text-white group-hover:text-cyan-400 transition-colors">
                Leer art√≠culo 
                <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
              </a>
            </div>
          </div>
        </article>
      ))}

    </div>
    <Newsletter />
  </main>
</Layout>